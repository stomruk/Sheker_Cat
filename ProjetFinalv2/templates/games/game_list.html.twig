{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .grid{
            background-color: #a0c4ff;
            display: grid;
            grid-template: 75px / 250px ;
            height: 400px;
            border-radius: 15px;
            margin: 5px 5px;
            box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.6);
        }
        .box1{
            grid-row: 1 / 3;
            margin: 5% 5%;
        }
        .info{
            text-align: center;
            border-radius: 15px;
            background-color: #9bf6ff;
            margin: 2% 5%;
        }
        .price{
            text-align: center;
            border-radius: 15px;
            background-color: #9bf6ff;
            margin: 2% 5%;
        }
        .image{
            height: 100%;
            width: 100%;
            border-radius: 15px;
        }
        .grid:hover{
            animation: zoom 0.3s linear 0s 1 normal forwards;
            transition: 0.3s;
        }
        .link-button{
            text-decoration: none;
            color: #240046;
            height: auto;
            align-items: center;
        }
        @keyframes zoom {
            0%{
                transform: scale(1);
            }
            100%{
                transform: scale(1.15);
            }
        }

    </style>
    <div class="container">
        {% for game in games %}
            <div class="grid">
                    <div class="box1"><img class="image" src="{{ game.cover }}"></div>
                    <div class="info"><h4>{{ game.name }}</h4><br><a href="{{ path('app_game_page',{'id' : game.id}) }}">Details</a></div>
                {% if game.price == 0 %}
                    <div><h2 class="price">free to play</h2></div>
                {% else %}
                    <div><h2 class="price">{{ game.price }} â‚¬</h2></div>
                {% endif %}
                    <div class="info"><a class="link-button" href="#">Add to Cart</a></div>
            </div>
        {% endfor %}
    </div>

{% endblock %}