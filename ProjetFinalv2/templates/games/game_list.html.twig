{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container">
        {% for game in games %}
            <div class="card">
                <div class="card-highlight">
                    <a class="card-detail" href="{{ path('app_game_page',{'id' : game.id}) }}">Details</a>
                </div>
                <div class="card-cover"><img width="100%" height="100%" src="{{ game.cover }}"></div>
                <div><p class="card-name">{{ game.name }}</p></div>
                {% if game.price == 0 %}
                    <div class="card-price"><p class="card-price-tag">free to play</p></div>
                {% else %}
                    <div class="card-price"><p class="card-price-tag">{{ game.price }}â‚¬</p></div>
                {% endif %}
            </div>
