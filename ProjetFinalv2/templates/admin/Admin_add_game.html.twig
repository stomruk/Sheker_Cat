{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="container">
        <form class="add-game-form" method="get" action="{{ path('admin_add_new_game') }}">
            <div class="admin-form-table">
                <label class="admin-form-label" for="title">Title</label>
                <input id="title" class="admin-form-label" name="title" type="text">
            </div>
            <div class="admin-form-table">
                <label class="admin-form-label" for="title">Description</label>
                <textarea name="description" class="admin-form-textarea"></textarea>
            </div>
            <div class="admin-form-table">
                <label class="admin-form-label" for="title">Cover</label>
                <input id="cover" class="admin-form-label" name="cover" type="text">
            </div>
            <div class="admin-form-table">
                <label class="admin-form-label" for="price">Price</label>
                <input id="price" class="admin-form-label" name="price" type="number" min="0" step="0.01">
            </div>
            <div class="admin-form-table">
                <label class="admin-form-label" for="date">Date</label>
                <input id="date" type="text" class="admin-form-label" name="date">
            </div>
            <div class="admin-form-table">
                <label class="admin-form-label" for="sale">Sale</label>
                <input id="sale" name="sale" type="number" max="100" min="0" class="admin-form-label">
            </div>
            <div class="admin-form-table">
                <label class="admin-form-label" for="developer">Developer</label>
                <a class="admin-form-label" href="{{ path('app_home') }}">Add New Developer</a>
                <select id="developer" name="developer" class="admin-form-label">
                    {% for developer in developers %}
                        <option value="{{ developer.id }}">{{ developer.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="admin-form-table">
                <label class="admin-form-label" for="category">Category</label>
                <a class="admin-form-label" href="{{ path('app_home') }}">Add New Category</a>
                <select id="category" name="category" class="admin-form-label">
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
                <select id="category" name="category2" class="admin-form-label">
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
                <select id="category" name="category3" class="admin-form-label">
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="admin-form-table">
                <label class="admin-form-label" for="image">Images</label>
                <input id="image" name="image" type="text" class="admin-form-label">
                <input id="image" name="image2" type="text" class="admin-form-label">
                <input id="image" name="image3" type="text" class="admin-form-label">
                <input id="image" name="image4" type="text" class="admin-form-label">
            </div>
            <div class="admin-form-table">
                <input type="submit" class="admin-form-label">
            </div>

        </form>
    </div>

{% endblock %}