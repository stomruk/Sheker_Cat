<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
</head>
<body>
<nav>
    <div id="menu-burger" class="side-nav">
        <div class="menu-burger">
            <div class="menu-line"></div>
            <div class="menu-line"></div>
            <div class="menu-line"></div>
        </div>
        <div class="side-button nav-button"><p class="sidenav-text"><a href="#">Games</a></p></div>
        <div class="side-button nav-button"><p class="sidenav-text"><a href="#">Community</a></p></div>
        <div class="side-button nav-button"><p class="sidenav-text"><a href="#">Login</a></p></div>
        <div class="side-button nav-button"><p class="sidenav-text"><a href="#">Cart</a></p></div>
    </div>
    <div class="nav-zone">
        <div class="nav-button"><p class="nav-text"><a href="#">Games</a></p></div>
        <div class="nav-button"><p class="nav-text"><a href="#">Community</a></p></div>
    </div>
    <div class="nav-zone-1">
        <img class="logo" src="{{ asset('media/Sans titre.png') }}">
        <p class="nav-logo"><b>Sheker Cat</b></p>
    </div>
    <div class="nav-zone-2">
        {% if app.user is not null %}
            <h1><a href="{{ path('app_profil',{'username' : app.user.username}) }}">Profil</a></h1>

        {% else %}
            <div class="nav-button"><p class="nav-text"><a href="#">Login</a></p></div>
            <div class="nav-button"><p class="nav-text"><a href="#">Cart</a></p></div>
        {% endif %}
    </div>
</nav>
{% block body %}
{% endblock %}
{% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
<script>
    let burgerNav = false

    document.getElementById("menu-burger").onclick = openNav

    function openNav(){
        if (burgerNav === false){
            document.getElementById("menu-burger").style.height = '450px'
            Array.from(document.getElementsByClassName('side-button')).forEach(btn =>{
                btn.style.display = 'flex'
            })
            burgerNav = true
        }
        else if (burgerNav === true){
            document.getElementById("menu-burger").style.height = '75px'
            burgerNav = false
            setTimeout(hide,500)
        }
        }
    function hide(){
        Array.from(document.getElementsByClassName('side-button')).forEach(btn =>{
            btn.style.display = 'none'
        })
    }
</script>
</body>
</html>
