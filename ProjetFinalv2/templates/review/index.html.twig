{% extends 'base.html.twig' %}

{% block title %}Hello ReviewController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="container">
    <div class="review-page">
        <div class="top-review">
            <div class="review-score-form">
                {{ form_start(review) }}
                <div class="review-score-area">
                    {{ form_widget(review.score) }}
                    <p class="review-10-text"> / 10</p>
                </div>
            </div>
            <div class="review-game">
                <img src="{{ game.cover }}">
                <p class="review-gamename">{{ game.name }}</p>
            </div>
        </div>
        <div class="review-content-form-area">
            {{ form_widget (review.content)}}
            {{ form_widget (review.save)}}
            {{ form_end(review) }}
        </div>
    </div>
</div>

{% endblock %}

